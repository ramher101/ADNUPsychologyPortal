<table class = "table table-striped">
 
 <thead>
	<tr>
  		<th> Subject Code </th>
  		<th> Subject Title </th>
	</tr>
</thead>

<tbody>
<% @subjects.each do |x| %>

  <tr>
    <td> <a href = "/subject/<%= x.id %>" /> <%= x.subject_code %></a> </td>
    <td><%= x.subject_title  %> </td>
  </tr>


<% end %>

</tbody>

</table>


<% if current_user == 1 %>
<a href ="new" class="btn btn-primary btn-lg" role="button" > Add Subject </a>
<% end %>